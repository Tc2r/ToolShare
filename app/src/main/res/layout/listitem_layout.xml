<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d391e4">


        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="31dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            tools:text="#1"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_id"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/tv_id"
            android:textAppearance="@android:style/TextAppearance.Large"
            tools:text="Arushi's Bike Rack 4 Sell"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_id"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="35dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            tools:text="The green blue cow jumped over the moon until it got caught by a milky way! Everybody say hi!"/>

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_description"
            android:layout_below="@+id/tv_description"
            android:layout_marginTop="31dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            tools:text="Contact:"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_contact"
            android:layout_below="@+id/tv_contact"
            android:layout_marginTop="17dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            tools:text="Chicago, IL"/>

        <TextView
            android:id="@+id/tv_sharer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_title"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="6dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            tools:text="Arushi Rai"/>
    </RelativeLayout>


</LinearLayout>